<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nav_daily_list">

    <fragment
        android:id="@+id/nav_daily_list"
        android:name="com.tekinumut.cuyemekhane.ui.draweritems.DailyListFragment"
        android:label="@string/daily_action_title"
        tools:layout="@layout/fragment_daily_list">
        <action
            android:id="@+id/action_nav_daily_list_to_componentFragment"
            app:destination="@id/componentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_monthly_list"
        android:name="com.tekinumut.cuyemekhane.ui.draweritems.MonthlyListFragment"
        android:label="@string/monthly_action_title"
        tools:layout="@layout/fragment_monthly_list">
        <action
            android:id="@+id/action_nav_monthly_list_to_componentFragment"
            app:destination="@id/componentFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_nav_monthly_list_to_updateMonthlyListDialog"
            app:destination="@id/updateMonthlyListDialog" />

    </fragment>

    <fragment
        android:id="@+id/nav_duyurular"
        android:name="com.tekinumut.cuyemekhane.ui.draweritems.DuyurularFragment"
        android:label="@string/duyurular_action_title"
        tools:layout="@layout/fragment_duyurular" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.tekinumut.cuyemekhane.ui.draweritems.SettingsFragment"
        android:label="@string/settings_action_title"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_nav_settings_to_autoUpdateDialog"
            app:destination="@id/autoUpdateDialog" />
        <action
            android:id="@+id/action_nav_settings_to_removeBannerAdDialog"
            app:destination="@id/removeBannerAdDialog" />

    </fragment>

    <fragment
        android:id="@+id/nav_pricing"
        android:name="com.tekinumut.cuyemekhane.ui.draweritems.PricingFragment"
        android:label="@string/pricing_action_title"
        tools:layout="@layout/fragment_pricing" />

    <fragment
        android:id="@+id/nav_contact"
        android:name="com.tekinumut.cuyemekhane.ui.draweritems.ContactFragment"
        android:label="@string/contact_action_title"
        tools:layout="@layout/fragment_contact" />

    <fragment
        android:id="@+id/nav_about"
        android:name="com.tekinumut.cuyemekhane.ui.draweritems.AboutFragment"
        android:label="@string/about_action_title"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/componentFragment"
        android:name="com.tekinumut.cuyemekhane.ui.ComponentFragment"
        android:label="@string/food_component_title"
        tools:layout="@layout/fragment_dm_component" />

    <dialog
        android:id="@+id/autoUpdateDialog"
        android:name="com.tekinumut.cuyemekhane.ui.dialogfragments.AutoUpdateDialogFragment"
        android:label="@string/autoUpdateTitle"
        tools:layout="@layout/auto_update_dialog_fragment" />

    <dialog
        android:id="@+id/removeBannerAdDialog"
        android:name="com.tekinumut.cuyemekhane.ui.dialogfragments.RemoveBannerAdDialogFragment"
        android:label="@string/disable_banner_title"
        tools:layout="@layout/dialog_remove_banner_ad" />

    <dialog
        android:id="@+id/updateMonthlyListDialog"
        android:name="com.tekinumut.cuyemekhane.ui.dialogfragments.UpdateMonthlyListDialogFragment"
        android:label="@string/watch_ad_title"
        tools:layout="@layout/dialog_update_monthly_list">

    </dialog>


</navigation>