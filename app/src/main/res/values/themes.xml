<resources>
    <!-- Base application theme. -->
    <style name="Theme.CuYemekhane" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/color_primary_10</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary_10</item>
        <item name="colorOnPrimary">@color/color_neutral_95</item>
        <item name="colorPrimaryContainer">@color/color_primary_90</item>
        <item name="colorOnPrimaryContainer">@color/color_neutral_10</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_10</item>
        <item name="colorOnSecondary">@color/color_neutral_90</item>
        <item name="colorSecondaryContainer">@color/color_secondary_80</item>
        <item name="colorOnSecondaryContainer">@color/color_secondary_10</item>

        <!-- Error brand color. -->
        <item name="colorError">@color/color_error_40</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">@color/color_error_90</item>
        <item name="colorOnErrorContainer">@color/color_error_10</item>

        <!-- Background brand color. -->
        <item name="colorBackground">@color/color_neutral_95</item>
        <item name="colorOnBackground">@color/color_neutral_0</item>
        <item name="colorSurface">@color/color_secondary_10</item>
        <item name="colorOnSurface">@color/color_neutral_10</item>
        <item name="colorSurfaceVariant">@color/color_neutral_90</item>
        <item name="colorOnSurfaceVariant">@color/color_neutral_85</item>
        <item name="colorSurfaceInverse">@color/color_neutral_95</item>
        <item name="colorOnSurfaceInverse">@color/color_neutral_5</item>
        <item name="colorOutline">@color/color_neutral_30</item>

        <!-- Custom color -->
        <item name="colorWhiteCustom">@color/white</item>
        <item name="colorBlackCustom">@color/black</item>

        <!-- Widgets -->
        <item name="circularProgressIndicatorStyle">@style/Widget.App.CircularProgressIndicator
        </item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/color_neutral_95</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon</item>
        <item name="postSplashScreenTheme">@style/Theme.CuYemekhane</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <!-- ProgressBar -->
    <style name="Widget.App.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CircularProgressIndicator</item>
        <item name="trackThickness">20dp</item>
    </style>

    <style name="ThemeOverlay.App.CircularProgressIndicator" parent="">
        <item name="android:indeterminate">true</item>
        <item name="colorPrimary">@color/color_secondary_40</item>
    </style>

    <style name="ProfileTabTextView" parent="Widget.AppCompat.TextView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@drawable/shape_profile_tab_bg</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>