<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tekinumut.cuyemekhane.common.ui.CuToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/profile_tab_contact"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <View
        android:id="@+id/view_separator_title_contact"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_title_contact"
        app:layout_constraintTop_toBottomOf="@id/text_title_contact" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawablePadding="8dp"
        android:text="@string/contact_address"
        app:drawableStartCompat="@drawable/ic_home_address"
        app:layout_constraintStart_toStartOf="@id/text_title_contact"
        app:layout_constraintTop_toBottomOf="@id/view_separator_title_contact" />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawablePadding="8dp"
        android:text="@string/contact_phone"
        app:drawableStartCompat="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="@id/text_title_contact"
        app:layout_constraintTop_toBottomOf="@id/text_address" />

    <TextView
        android:id="@+id/text_phone_extension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawablePadding="8dp"
        android:text="@string/contact_phone_external"
        app:drawableStartCompat="@drawable/ic_phone"
        app:layout_constraintStart_toStartOf="@id/text_title_contact"
        app:layout_constraintTop_toBottomOf="@id/text_phone" />

    <TextView
        android:id="@+id/text_working_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawablePadding="8dp"
        android:text="@string/contact_working_hours"
        app:drawableStartCompat="@drawable/ic_access_time"
        app:layout_constraintStart_toStartOf="@id/text_title_contact"
        app:layout_constraintTop_toBottomOf="@id/text_phone_extension" />

    <Button
        android:id="@+id/button_create_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="?attr/colorBlueGoogleCustom"
        android:text="@string/contact_navigate_address_button"
        app:icon="@drawable/ic_direction_map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_working_hours" />
</androidx.constraintlayout.widget.ConstraintLayout>