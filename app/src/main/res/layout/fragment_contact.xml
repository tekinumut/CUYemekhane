<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/contact_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/contact_title"
            android:textColor="@color/primary_text"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/contact_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_baseline_place_24"
            android:drawablePadding="10dp"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/contact_address"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_title" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_call_24"
            android:drawablePadding="10dp"
            android:text="@string/contact_phone"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/contact_address"
            app:layout_constraintTop_toBottomOf="@+id/contact_address" />

        <TextView
            android:id="@+id/contact_dahili"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:text="@string/contact_phone_dahili"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/contact_phone"
            app:layout_constraintTop_toBottomOf="@+id/contact_phone" />

        <TextView
            android:id="@+id/contact_work_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/ic_access_time_24"
            android:drawablePadding="10dp"
            android:lineSpacingMultiplier="1.1"
            android:text="@string/contact_work_date_1"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/contact_address"
            app:layout_constraintTop_toBottomOf="@+id/contact_dahili" />

        <Button
            android:id="@+id/btn_to_google_maps"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/button_blue"
            android:drawableStart="@drawable/ic_directions_24"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:text="@string/show_google_maps"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/contact_work_time"
            app:layout_constraintTop_toBottomOf="@id/contact_work_time" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>